<div id="signup-container" class="form-container">
        <form id="signup-form">        
            <label for="userName">User name:</label>
            <input type="text" id="userName" name="userName" placeholder="User name" required><br><br>
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" placeholder="Age" required><br><br>
            <label for="email">Email:</label>
            <input type="email" id="email" name="name" placeholder="Email" required><br><br>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Password" required><br><br>
            <label for="favoriteGenre">Favorite genre:</label>
            <select name="favoriteGenre" id="favoriteGenre"> 
                <option value="None">None</option>
                <option value="Action">Action</option>
                <option value="Adventure">Adventure</option>
                <option value="Comedy">Crime and mystery</option>
                <option value="Action">Fantasy</option>
                <option value="Adventure">Historical</option>
                <option value="Comedy">Historical fiction</option>
                <option value="Action">Horror</option>
                <option value="Adventure">Romance</option>
                <option value="Comedy">Satire</option>
                <option value="Comedy">Science fiction</option>
            </select><br><br>
            <input type="checkbox" id="read" name="read" required>
            <label for="read">I have read</label><br><br>
            <button type="submit">Sign up</button>
        </form>
    </div>
    <script src="http://localhost:3000/js/utils/signup.js"></script>